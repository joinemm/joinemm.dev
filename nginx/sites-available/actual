# actual is a self hosted budgeting solution

server {
    server_name budget.joinemm.dev;

    location / {
        proxy_pass http://127.0.0.1:5006;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/budget.joinemm.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/budget.joinemm.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}
server {
    server_name budget.joinemm.dev;

    if ($host = budget.joinemm.dev) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    return 404; # managed by Certbot
}